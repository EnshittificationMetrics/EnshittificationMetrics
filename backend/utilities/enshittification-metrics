	su bsea bsea
	rotate 5
	maxsize 150k
}

/var/www/em/app/instance/db_backup.log {
	su bsea www-rwx
	rotate 6
	minsize 15k
}

/var/www/em/log.log {
	su www-data www-rwx
	rotate 48
	maxsize 200k
}

